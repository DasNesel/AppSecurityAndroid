    <EditText
        android:id="@+id/ACCOUNT_NAME"
        android:layout_width="262dp"
        android:layout_height="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Login"
        tools:layout_editor_absoluteX="122dp"
